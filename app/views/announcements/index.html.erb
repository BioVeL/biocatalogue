<h1>
	<% if BioCatalogue::Auth.allow_user_to_curate_thing?(current_user, :announcements) %>
		<span class="header_right_bar">
			<span class="actions_button">
				<ul class="p7menubar">
					<li>
						<a href="#" class="trigger">
							<span style="vertical-align: middle;">Actions</span>
							<%= image_tag icon_filename_for(:dropdown), :alt=> "dropdown menu" -%>
						</a>
						<ul>
							<li>
								<%= link_to(image_tag(icon_filename_for(:add)) + content_tag(:span, ' Make an announcement'), new_announcement_path) -%>
							</li>
						</ul>
					</li>
				</ul>
			</span>
		</span>
	<% end %>
	<%= generic_icon_for(:announcements, 'margin-right: 0.4em;') -%>
	<span>
		Announcements 
		<span class="count_text">(<%= Announcement.count %>)</span>
	</span>
</h1>

<%= render :partial => 'widgets/pagination_top', :locals => { :paginated_items => @announcements } %>

<div id="latest_announcements" style="margin: 0.5em 0;">
	<%= render :partial => "listing", :locals => { :items => @announcements } %>
</div>

<%= render :partial => 'widgets/pagination_bottom', :locals => { :paginated_items => @announcements } %>
