<% 
	 selected = is_filter_selected(facet_type, facet["name"])
	 url = selected ? generate_exclude_filter_url(facet_type, facet["name"]) : generate_include_filter_url(facet_type, facet["name"]) 
%>

<span class="container">
	<% link_to(url, :class => (selected ? "selected" : nil), :title => tooltip_title_attrib(h(facet["name"]))) do -%>
		<span class="text"><%= truncate(h(facet["name"]), :length => 28) -%></span>
		
		<% unless facet['count'].blank? %>
			<span class="faded count">(<%= facet["count"] -%>)</span>
		<% end %>
		
		<% if selected %>
			<span class="deselect">&nbsp</span>
		<% end %>
	<% end %>
</span>
