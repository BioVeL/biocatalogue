<span class="container">
	<% selected = is_filter_selected(facet_type_query_key, facet["name"]) %>
	<% url = selected ? generate_exclude_filter_url(facet_type_query_key, facet["name"]) : generate_include_filter_url(facet_type_query_key, facet["name"]) %>
	<% link_to(url, :class => (selected ? "selected" : nil)) do -%>
		<span class="text"><%= h(facet["name"]) -%></span>
		<span class="faded count">(<%= facet["count"] -%>)</span>
		<% if selected %>
			<span class="deselect">&nbsp</span>
		<% end %>
	<% end %>
</span>