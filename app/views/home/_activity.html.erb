<% unless (entries = activity_entries_for_home).empty? %>
  <div class="activity_feed">
  <% entries.each do |e| %>
    <p class="day_title">
			<%= e.keys.first -%>
    </p>
		<table class="day">
      <% e[e.keys.first].each do |i| %>
				<tr>
					<td style="padding-top: 2px; width: 28px; padding-right: 10px;"><%= generic_icon_for(i[1]) -%></td>
					<td style="text-align: left;"><%= i[0] -%></td>
				</tr>
      <% end %>
		</table>
  <% end %>
  </div>
<% else %>
  <p>No activity</p>
<% end %>
