<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
       "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
	<head>
		<meta http-equiv="content-type" content="text/html;charset=UTF-8" />
		
		<%= t :site => "biocatalogue.org &#45; #{controller_visible_name(controller.controller_name)}", :separator => "&#45;" %>
		
		<link rel="shortcut icon" href="/favicon.ico" type="image/x-icon"/>
		
		<%= stylesheet_link_tag 'styles_2' %>
		
		<%= javascript_include_tag :defaults %>
		
		<%= render :partial => "layouts/feed_link_tags" %>	
	</head>
	<body>
		<!-- Layout -->
  		<div id="header-region" class="clear-block"></div>

    	<div id="wrapper">
    		<div id="container" class="clear-block">

      			<div id="header">
			    	<div id="logo-floater">
			            <%= link_to image_tag("logo.png", :alt => "www.biocatalogue.org"), "/" %>
			        </div>
			
		        	<ul class="primary-links"><li><a href="#">Home</a></li>
						<li class="separator"><a href="#">Support</a></li>
						<li class="separator"><a href="#">About us</a></li>
					</ul>
					
					<div id="login_box">
						<%= link_to image_tag("close.gif", :alt => "Close login box"), "#", :onclick => "closeLoginBox('login_box', 'login_link');" %>				
						<% form_tag session_path do %>
					      <span>
					        <%= text_field_tag :login, params[:login], { :size => 15, :class => 'small_login' } %>
					        <label for="login">Email:</label>
					      </span>
						  <br />			
					      <span>
					        <%= password_field_tag :password, params[:password], { :size => 15, :class => 'small_login' } %>
					        <label for="password">Password:</label>
					      </span>
					      <%= submit_tag "Login", { :class => 'small_submit_button' } %>
						  <br />
						  <a id="forgot_pwd" href="#">Forgot your<br />password ?</a>
					    <% end %>
					</div>
					
					<div id="login_links">
						<!--<p>-->
							<% if logged_in? -%>
								Welcome <%= link_to current_user.display_name, current_user, :id => "user_profile_link", :class => "" -%>&nbsp;|&nbsp;
								<%= link_to 'Logout', logout_url, :id => "logout_link", :class => "red_arrow", :method => :delete -%>
							<% else -%>
								<%= link_to 'Login', "#", :id => "login_link", :class => "login", :onclick => "showLoginBox(this, 'login_box');" -%>
							<% end -%>
						<!--</p>-->
					</div>              
			    </div> <!-- /header -->
			
			      
			    <div id="center"><div id="squeeze"><div class="right-corner"><div class="left-corner">
			    	<div id="action_bar">
			        	Search:&nbsp;<input type="text" />&nbsp;<%= link_to image_tag("go_button.png", :alt => "Search for a Service"), "/" %><span id="action_links"><%= link_to 'Browse', services_path %><%= link_to 'Register a Service', new_service_path %></span>
			        </div>
                    
					<% if flash[:error] %>
						<div id="error_flash">
							<%= white_list flash[:error] %>
						</div>
					<% end %>
    				<% if flash[:notice] %>
						<div id="notice_flash">
							<%= white_list flash[:notice] %>
						</div>
					<% end %>
						
					<%= yield -%>          
          
                    <span class="clear"></span>

                    <div id="footer">
						<%= render :partial => "layouts/footer" %>
					</div><!-- /footer -->
				</div></div></div></div> <!-- /.left-corner, /.right-corner, /#squeeze, /#center -->

      
			</div> <!-- /container -->
		</div> <!-- /wrapper -->
		<!-- /layout -->
	</body>
</html>
