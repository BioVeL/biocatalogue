<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
       "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
	<head>
		<meta http-equiv="content-type" content="text/html;charset=UTF-8" />
		
		<%= t :site => "biocatalogue.org &#45; #{controller_visible_name(controller.controller_name)}", :separator => "&#45;" %>
		
		<link rel="shortcut icon" href="/favicon.ico" type="image/x-icon"/>
		
		<%= stylesheet_link_tag 'reset-fonts-grids' %>
		<%= stylesheet_link_tag 'base-min' %>
		<%= stylesheet_link_tag 'styles' %>
		
		<%= javascript_include_tag :defaults %>
		
		<%= render :partial => "layouts/feed_link_tags" %>	
	</head>
	<body>
		<div id="doc4" class="yui-t5">
			<div id="hd"><!-- header -->
				<div id="header_top">
					<div class="logo">
						<%= link_to image_tag("logo.png"), "/" %>
					</div>
					<%= render :partial => 'widgets/login_box' %>
				</div>
				<%= render :partial => 'widgets/login_links' %>
			</div>
			
			<div id="bd" style="clear: both;"><!-- body -->
				<div id="yui-main"> 
  				<div class="yui-b">
  					<div id="main_content">
						<% if flash[:error] %>
							<div id="error_flash">
								<%= white_list flash[:error] %>
							</div>
						<% end %>
	    				<% if flash[:notice] %>
							<div id="notice_flash">
								<%= white_list flash[:notice] %>
							</div>
						<% end %>
							
							<%= yield -%>
						</div>
					</div>
				</div>
				<div class="yui-b">
					&nbsp;
				</div>
			</div>
			
			<div id="ft"><!-- footer -->
				<%= render :partial => "layouts/footer" %>
			</div>
		</div>
	</body>
</html>