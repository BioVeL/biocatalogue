<head>

  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />

  <%= t :site => "#{SITE_NAME} - #{controller_visible_name(controller.controller_name)}", :separator => "-" %>

  <link rel="icon" href="/favicon.ico" type="image/x-icon" />
  <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon"/>

  <%= stylesheets = ['reset-fonts', 'styles', 'redbox', 'p7exp', 'rounded-corners', 'colour-override']
      stylesheets = stylesheets << 'local' if File.exists?('public/stylesheets/local.css')
      stylesheets << {:cache => 'css_cached'}
      stylesheet_link_tag *stylesheets %>

  <%= render :partial => "layouts/head_tabber_pre" %>

  <%= javascript_include_tag 'prototype.js','prototype_ujs.js', 'effects.js', 'dragdrop.js',
                             'boxover.js', 'controls.js', 'redbox.js', 'application.js',
                             'textInputWithDefaultText', 'texpand', 'tabber', 'tablekit',
                             'p7exp', 'xregexp-min',
                             :cache=>'js_cached' %>

  <%= render :partial => "layouts/feed_link_tags" %>

  <link rel="search" type="application/opensearchdescription+xml" title="BioCatalogue Search" href="/opensearch.xml" />

  <%= render :partial => "layouts/head_browser_overrides" -%>

  <!-- For Google Webmaster Tools -->
  <meta name="verify-v1" content="81DGC7REhy1MqJxyocSFnAkciHDuldhTcEWcekYadhA=" >

  <!-- Google Visualisation API -->
  <%= Seer::init_visualization.html_safe -%>

  <!-- Include meta tags “csrf-param” and “csrf-token” for cross-site request forgery protection -->
  <%= csrf_meta_tag %>

</head>	