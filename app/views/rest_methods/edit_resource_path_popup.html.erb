<div class="redbox_contents" style="width:600px;">
  <div class="head">
    <%= link_to_close_redbox image_tag("close.gif"), :style => "float:right; margin-left:0.5em; vertical-align:middle;" -%>
    <span style="vertical-align:middle;">Edit Endpoint Path</span>
  </div>
  
  <div class="body">
    <% form_for :rest_method, :url => {:controller => "rest_methods", 
                                       :action => "update_resource_path", 
                                       :id => @rest_method.id} do |f| %>
    <%= f.error_messages %>

    <div>
      <div class="box_info_standout" style="font-size:100%" >
        You are editing the path for endpoint:
        <b><%= @rest_method.display_endpoint -%></b>
      </div>
      
      <p class="high_linespaced form_field_section">
        <span style="width:87%; float:right;">
          <%= text_field_tag "new_path", @rest_method.rest_resource.path, :style => "width: 99%;" %>
        </span>
        <b><%= @rest_method.method_type %></b>        
      </p>
      
      <!--p style="margin-bottom: 1.5em; text-align: center;">
        <%= link_to "Preview Template", :controller => "rest_methods", 
                                        :action => "update_template_preview", 
                                        :id => @rest_method.id %>
      </p>

      <div id="template_preview_div" style="margin-top: 1.2em; text-align:center;">
        <%= create_url_template(@base_endpoint, nil, @rest_method, "?sabotaged=yes") -%>
      </div>

      <br /-->
      <p style="margin-top: 1.5em; text-align: center;">
        <%= f.submit "Update", :disable_with => "Submitting..." -%>
        <%= button_to_function "Close", "RedBox.close()" -%>
      </p>

    </div>
  
  <% end %>
  
  </div>
</div>
