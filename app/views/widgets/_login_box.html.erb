<div id="login_box" style="display:none;">
	<%= link_to image_tag("close.gif", :alt => "Close login box"), "#", :onclick => "closeLoginBox('login_box', 'login_link');" %>				
	<% form_tag session_path do %>
      <span>
        <%= text_field_tag :login, params[:login], { :size => 15, :class => 'small_login' } %>
        <label for="login">Email:</label>
      </span>
	  <br />			
      <span>
        <%= password_field_tag :password, params[:password], { :size => 15, :class => 'small_login' } %>
        <label for="password">Password:</label>
      </span>
      <%= submit_tag "Sign in", { :class => 'small_submit_button' } %>
	  <br />
	  <!--<a id="forgot_pwd" href="#">Forgot your<br />password ?</a>-->
	  <%= link_to 'Forgot your<br />password ?', "/forgot_password", :id => "forgot_pwd" -%>
	  <div id="sign_up">Don't have an account ? <%= link_to 'Sign up', "/signup", :id => "signup_link", :class => "signup" -%></div>
    <% end %>
</div>
