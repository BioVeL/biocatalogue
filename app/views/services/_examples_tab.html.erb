<div id="tab-examples" class="tabbertab">
  
  <h3>Examples</h3>
  
  <div id="examples_tab_inner">
    <%= image_tag(icon_filename_for(:spinner), :id => "examples_tab_inner_spinner", :alt => "Loading...", :style => "display: none;") -%>
  </div>
</div>

<script type="text/javascript">
  document.observe('dom:loaded', function(){
    <%= remote_function({ :url => examples_service_url(@service),
                          :update => { :success => 'examples_tab_inner' },
                          :loading => "Element.show('examples_tab_inner_spinner')",
                          :complete => "Element.hide('examples_tab_inner_spinner')",
                          :method => :get }) -%>
  });
</script>