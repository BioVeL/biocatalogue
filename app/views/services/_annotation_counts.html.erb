<span class="annotations_counts_box">
	<% content_tag(:span, :class => "total", :title => tooltip_title_attrib("Overall number of extra annotations on this service and its parts"))  do %>
		<%= image_tag('page.png', :alt => "Overall number of extra annotations") -%>
