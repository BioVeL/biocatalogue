<% counts = metadata_counts_for_service(service) %>
<div class="annotations_counts_outer_box">
	<% rounded "#DDD", "#333", "100%" do %>
		<div class="annotations_counts_box">
			<% content_tag(:span, :class => "total", :title => tooltip_title_attrib("Overall number of annotations on this service and its parts"))  do %>
				Annotations: <%= counts[:total] -%>
				<%= image_tag(icon_filename_for(:annotations), :alt => "Overall number of annotations on this service and its parts") -%>
			<% end %>
			
			<% content_tag(:span, :class => "annotation_source_provider", :title => tooltip_title_attrib("Total number of annotations from the provider's definition / description document"))  do %>
				<%= counts[:providers] -%>
				<%= image_tag(icon_filename_for(:annotation_source_provider_document), :alt => "Total number of annotations from the provider's definition / description document") -%>
			<% end %>
			
			<% content_tag(:span, :class => "annotation_source_user", :title => tooltip_title_attrib("Total number of user submitted annotations"))  do %>
				<%= counts[:users] -%>
				<%= image_tag(icon_filename_for(:annotation_source_user), :alt => "Total number of user submitted annotations") -%>
			<% end %>
			
			<% content_tag(:span, :class => "annotation_source_registry end", :title => tooltip_title_attrib("Total number of annotations sourced from other registries"))  do %>
				<%= counts[:registries] -%>
				<%= image_tag(icon_filename_for(:annotation_source_registry), :alt => "Total number of annotations sourced from other registries") -%>
			<% end %>
		</div>
	<% end %>
</div>
