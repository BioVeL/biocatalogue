<% t "Browse Services" -%>

<center>
	<% rounded "#E9F7CC", "#000", "80%" do %>
	
		<div class="box_info" style="padding: 0.4em 0.6em; margin: 0;">
			<span style="float:right; font-size: 0.7em;">[ <%= link_to("See All Tags", tags_index_path) -%> ]</span>
			<h3>
				<span style="vertical-align:middle;">
					<b>Top <%= pluralize(@tags.length, "tag") -%> on BioCatalogue</b>
				</span>
				<span style="vertical-align:middle; margin-left:0.5em;">
					<%= help_icon_with_tooltip(help_text_for_tag_clouds) -%>
				</span>
			</h3>
			
			<%= generate_tag_cloud(@tags, "weighted", :tag_cloud_style => "margin-top: 0.3em;") -%>
		</div>
	
	<% end %>
</center>

<br/>

<span style="float: right;">
	<%= link_to 'Submit a Service', new_service_path -%>
</span>

<a name="browse"></a>

<h1>Browse Web Services</h1>

<%= render :partial => 'index_facets' %>

<br/>
<br/>

<div>
	<span class="inline-block" style="float:right; margin-left: 2em;">
		<%= render :partial => 'index_sortby' %>
	</span>
	
	<%= render :partial => 'widgets/pagination_top', :locals => { :paginated_items => @services } %>
</div>

<div id="latest_services" style="margin: 1em 0;">
	<%= render :partial => "listing", :locals => { :items => @services } %>
</div>

<%= render :partial => 'widgets/pagination_bottom', :locals => { :paginated_items => @services } %>
