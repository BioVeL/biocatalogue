<div id="tab-monitoring" class="tabbertab">
	
	<h3>Monitoring</h3>
	
  <div id="monitoring_tab_inner">
    <%= image_tag(icon_filename_for(:spinner), :id => "monitoring_tab_inner_spinner", :alt => "Loading...", :style => "display: none;") -%>
  </div>	
</div>

<script type="text/javascript">
  document.observe('dom:loaded', function(){
    <%= remote_function({ :url => monitoring_service_url(@service),
                          :update => { :success => 'monitoring_tab_inner' },
                          :loading => "Element.show('monitoring_tab_inner_spinner')",
                          :complete => "Element.hide('monitoring_tab_inner_spinner')",
                          :method => :get }) -%>
  });
</script>
 