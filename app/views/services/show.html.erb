<div id="service-tabs" class="tabberlive" style="margin-top: 1.5em;">

  <%= render :partial => 'tabs_bar' %>

  <% current_tab(:service).to_s %>
  <% case current_tab(:service).to_s %>
  <% when 'overview' %>
    <%= render :partial => "services/show_tabs/overview" %>
  <% when 'service_endpoint' %>
      <%= render :partial => "#{@latest_version_instance.class.to_s.pluralize.underscore}/show_service_tabs",
      				 	 :locals => {  :service_version_instance =>  @latest_version_instance } %>
  <% when 'examples' %>
    <%= render :partial => "services/examples_tab" -%>
  <% when 'monitoring' %>
    <%= render :partial => "services/monitoring_tab" -%>
  <% when 'history' %>
	<%= render :partial => "services/news_tab" -%>
  <% when 'examples' %>
    <%= render :partial => 'services/examples' %>
  <% when 'scripts' %>
    <%= render :partial => "services/example_scripts_tab" %>
  <% when 'workflows' %>
    <%= render :partial => "services/example_workflows_tab" %>
  <% when 'data' %>
    <%= render :partial => "services/example_data_tab" %>
  <% end %>
</div>

