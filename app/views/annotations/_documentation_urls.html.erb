<%# Set defaults for optional parameters to this partial... %>

<% unless annotatable.nil? %>
	<div class="annotations_container">
		<div style="margin-top: 1em;">
		  <b>Documentation URL(s):</b>
			
			<%= annotation_add_by_popup_link annotatable,
			     :attribute_name => "documentation_url",
					 :link_text => "Add a documentation URL",
			     :tooltip_text => "Click to add a URL to further documentation",
			     :style => "margin-left: 1em;" -%>

		</div>
		
		<div class="box_annotations">
			<% unless (doc_url = annotatable.documentation_url).blank? %>
				<% rounded(annotation_text_item_background_color, "#333", "100%") do %>
					<div class="text">
						<p class="annotation_source_text annotation_source_provider">
							from <b>service description document</b> (<%= distance_of_time_in_words_to_now(annotatable.created_at) -%> ago)
						</p>
						<div>
							<%= auto_link(h(desc), :link => :all, :href_options => { :target => '_blank' }) -%>
						</div>
					</div>
				<% end %>
			<% end %>
			
			<% doc_url_annotations = annotatable.annotations_with_attribute("documentation_url") %>
			<% unless doc_url_annotations.empty? %>
				<% doc_url_annotations.each do |ann| %>
					<% rounded(annotation_text_item_background_color, "#333", "100%") do %>
						<div class="text">
							<%= annotation_source_text(ann) -%>
							<div>
								<%= auto_link(h(ann.value), :link => :all, :href_options => { :target => '_blank' }) -%>
							</div>
							<% if mine?(ann) %>
								<p class="actions">
									<span><%= annotation_edit_by_popup_link(ann) -%></span>
									<span style="margin-left: 1em;"><%= link_to("delete", annotation_path(ann), :method => :delete, :confirm => "Are you sure you want to delete this documentation URL?", :style => 'vertical-align: middle;')-%></span>
								</p>
							<% end %>
						</div>
					<% end %>
				<% end %>
			<% else %>
				<% if annotatable.documentation_url.blank? %>
					<span class="none_text">none</span>
				<% end %>
			<% end %>
		</div>
	</div>
<% end %>