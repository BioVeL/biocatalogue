<%
	attribute_name = "contact"
	main_div_id = "contacts_#{rand(10000000)}"
%>

<% unless annotatable.nil? %>
	<div id="<%= main_div_id -%>" class="annotations_container">
		<div style="margin-top: 1em;">
		  <b>Contact Info:</b>
			<%= info_icon_with_tooltip("Who can be contacted about this service?") -%>
		</div>
		
		<div class="box_annotations">
			<% contacts_annotations = annotatable.annotations_with_attribute(attribute_name).sort {|a,b| a.created_at <=> b.created_at} %>
			<% unless contacts_annotations.empty? %>
				<% contacts_annotations.each do |ann| %>
					<% rounded(annotation_text_item_background_color, "#333", "100%") do %>
						<div class="text">
							<%= annotation_source_text(ann) -%>
							<div>
								<%= annotation_prepare_description(ann.value) -%>
							</div>
							<% if mine?(ann) %>
								<p class="actions">
									<span><%= annotation_edit_by_popup_link(ann) -%></span>
									<span style="margin-left: 1em;"><%= link_to("delete", annotation_path(ann), :method => :delete, :confirm => "Are you sure you want to delete this contact info?", :style => 'vertical-align: middle;')-%></span>
								</p>
							<% end %>
						</div>
					<% end %>
				<% end %>
			<% else %>
				<span class="none_text">None</span>
			<% end %>
		</div>
		
		<% if logged_in? %>
			
			<%= render :partial => "annotations/common/default_add_box",
								 :locals => { :partial_from => "contacts",
															:annotatable => annotatable,
															:attribute_name => attribute_name,
															:text_area_default_text => "Add contact info for people/organisations that can be contacted regarding this service...",
															:main_div_id => main_div_id } -%>
		
		<% else %>
			<div class="login_link_box">
				<small><%= link_to("Login to add contact info", login_path) -%></small>
			</div>
		<% end %>
	</div>
<% end %>