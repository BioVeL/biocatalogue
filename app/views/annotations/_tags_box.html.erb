<% tag_annotations = annotatable.annotations_with_attribute("tag") %>

<div class="box_section">
	<p class="heading">
		Tags
		<span class="faded">(<%= tag_annotations.length -%>)</span>
	</p>
	
	<div class="center">
		<% unless tag_annotations.empty? %>
			<%= generate_tag_cloud_from_annotations(tag_annotations, :max_font => 14) %>
		<% else %>
			<span class="none_text">none</span>
		<% end %>
	</div>
	
	<div class="footer">
		<% if logged_in? %>
			<%= annotation_add_by_popup_link annotatable,
												 :attribute_name => "Tag",
				                             	 :tooltip_text => '',
				                             	 :link_text => 'Add tags',
				                             	 :icon_filename => 'add_tag.gif', 
												 :icon_hover_filename => 'add_tag_hover.gif',
				                             	 :show_not_logged_in_text => false,
				                             	 :multiple => true -%>
			<% else %>
				<small><%= link_to "Log in", login_path -%> to add tags</small>
			<% end %>
  </div>
</div>