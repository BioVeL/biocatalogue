<% unless annotatable.nil? %>
	<div class="annotations_container">
		<div style="margin-top: 1em;">
		  <b>Publications:</b>
			<%= info_icon_with_tooltip("What papers have been published <b>for</b> this service. This can be a URI to the publication and/or a DOI.") -%>
			
			<%= annotation_add_by_popup_link annotatable,
			     :attribute_name => "publication",
					 :link_text => "Add publication info",
			     :tooltip_text => "Click to add info on a publication for this service. This can be a URI to the publication and/or a DOI.",
			     :style => "margin-left: 1em;" -%>

		</div>
		
		<div class="box_annotations">
			<% publication_annotations = annotatable.annotations_with_attribute("publication") %>
			<% unless publication_annotations.empty? %>
				<% publication_annotations.each do |ann| %>
					<% rounded(annotation_text_item_background_color, "#333", "100%") do %>
						<div class="text">
							<%= annotation_source_text(ann) -%>
							<div>
								<%= annotation_prepare_description(ann.value) -%>
							</div>
							<% if mine?(ann) %>
								<p class="actions">
									<span><%= annotation_edit_by_popup_link(ann) -%></span>
									<span style="margin-left: 1em;"><%= link_to("delete", annotation_path(ann), :method => :delete, :confirm => "Are you sure you want to delete this publication info?", :style => 'vertical-align: middle;')-%></span>
								</p>
							<% end %>
						</div>
					<% end %>
				<% end %>
			<% else %>
				<span class="none_text">none</span>
			<% end %>
		</div>
	</div>
<% end %>