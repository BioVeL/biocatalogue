<% t "Results" -%>

<h1>Search Results</h1>

<p>
	Search query:
	"<b><%= h @query -%></b>"
	returned <%= pluralize(@count, "item") -%>
</p>

<% if @count == 0 %>

  <p class="none_text">No search results.</p>
  
<% else %>

	<div class="tabber">

		<% @results.each do |type, res| %>
			<% unless res.empty? %>
			  <div class="tabbertab">
			    <h3><%= "#{type} (#{res.length})" -%></h3>
			    
					<%= render :partial => "#{type.gsub(' ', '').underscore}/listing", :locals => { :items => res } %>
			  </div>
			<% end %>
		<% end %>
	
	</div>
	
<% end %>

<br />

