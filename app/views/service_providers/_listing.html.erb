<div class="listings">
	<% items.each do |provider| %>
		<div class="listing_item">
			<p class="name">
				<%= link_to(display_name(provider), service_provider_path(provider)) -%>
			</p>
			
			<div style="margin-top: 0.8em; font-size: 85%;">
				<%= render :partial => "annotations/descriptions",
							:locals => { :annotatable => provider,
								:show_header => false,
								:truncate_desc => 700,
								:auto_link_desc => false,
								:show_modify_options => false,
								:show_add_box => false } -%>
			</div>
		</div>
	<% end %>
</div>
