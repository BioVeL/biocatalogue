<% if !@error_message.blank? -%>
	<div class="soap_service_form">
		<p class="error_text">
			<%= h @error_message -%>
		</p>
	</div>
<% elsif !@existing_service.nil? %>
	<div class="soap_service_form">
		<p class="error_text">
			This service has already been submitted:
		</p>
		<p>
			<%= link_to h(@existing_service.name), @existing_service -%>
		</p>
	</div>
<% else %>
	<p class="step_text">
		2. Check the details and provide more informatiom, then submit:
		<br/>
		<span class="additional_info_text" style="margin-top: 0.8em;">After submission you can also provide more information</span>
	</p>
	
	<div class="soap_service_form">
		<%= render :partial => "new_form" %>
	</div>
<% end -%>
