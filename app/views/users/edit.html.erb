<h1>Editing my profile</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>
<fieldset>
  <legend>Change my profile</legend>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :display_name %><br />
    <%= f.text_field :display_name %>
  </p>
  <p>
    <%= f.label :affiliation %><br />
    <%= f.text_field :affiliation %>
  </p>
  <p>
    <%= f.label :country %><br />
    <%= f.country_select :country %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
</fieldset>
<% end %>

<%= link_to 'Back to User Profile', @user, :class => "red_arrow_left" %>
