<h1>Sign up to the BioCatalogue website</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>
<fieldset>
  <legend>Email</legend>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>  <p>
    <%= f.label :email_confirmation %><br />
    <%= f.text_field :email_confirmation %>
  </p>
</fieldset>
<fieldset>
  <legend>Password</legend>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </p>
</fieldset>
<fieldset>
  <legend>Some information about you</legend>
  <p>
    <%= f.label :affiliation, "Affiliation (e.g. institute, company)" %><br />
    <%= f.text_field :affiliation, :size => 45 %>
  </p>
  <p>
    <%= f.label :country %><br />
    <%= f.country_select :country, ["United Kingdom"], { :prompt => "- Please select a country -" } %>
  </p>
  <p>
    <%= f.submit "Sign up", :disable_with => "Signing up..." %>
  </p>
</fieldset>
<% end %>

<%= link_to 'Back', users_path %>
