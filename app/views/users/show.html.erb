%>

<% if mine?(@user) -%>
	<span style="float: right;">
		<%= link_to 'Edit', edit_user_path(@user) %>
	</span>
<% end -%>

<h1>User Profile</h1>
<p>
  <b>Display Name:</b>
  <%=h @user.display_name %>
</p>

<p>
<% if mine?(@user) -%>
  <b>Email:</b>
  <%=h @user.email %>
<% end -%>
</p>

<p>
  <b>Affiliation:</b>
  <%=h @user.affiliation %>
</p>

<p>
  <b>Country:</b>
  <%=h @user.country %>
</p>

<br/>

<div class="tabber">
	
  <div class="tabbertab">
    <h3><%= "Services submitted (#{@users_services.length})" -%></h3>
    
		<%= render :partial => 'widgets/pagination_top', :locals => { :paginated_items => @users_services } %>
		
		<div id="users_services" style="margin: 1em 0;">
			<%= render :partial => "services/listing", :locals => { :items => @users_services } %>
		</div>
		
		<%= render :partial => 'widgets/pagination_bottom', :locals => { :paginated_items => @users_services } %>
  </div>

</div>