<div class="listings">
	<% items.each do |user| %>
		<div class="listing_item">
			<p class="name">
				<%= link_to(h(user.display_name), user_path(user)) -%>
				<%= flag_icon_from_country(user.country, :class => "framed") -%>
			</p>
			
			<p class="details">
				<b>Affiliation:</b>
				<% unless user.affiliation.blank? %>
					<%= h(user.affiliation) -%>
				<% else %>
					<span class="none_text">none</span>
				<% end %>
			</p>
		</div>
	<% end %>
</div>
